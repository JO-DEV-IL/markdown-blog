<!-- EJS file that acts as an index.html file -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <!-- Bootstrap CSS Install -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <%- include('styles') %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <div class="container">
        <h3 class="mb-4 mt-5">Edit Slice</h3>
        
        <!-- Added method-override syntax to override POST with PUT(edit method) -->
        <!-- override syntax = ?_method=INSERTMETHOD -->
        <form action="/articles/<%= article.id %>?_method=PUT" method="POST">
            <%- include('_form_fields') %>
        </form>
    </div>
</body>
</html>