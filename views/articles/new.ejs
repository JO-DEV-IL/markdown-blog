<!-- EJS file that acts as an index.html file -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <!-- Bootstrap CSS Install -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">New Article</h1>

        <!-- POST request to create something -->
        <!-- in /articles (articles.js) route -->
        <form action="/articles" method="POST">
            <!-- ejs syntax for exact HTML -->
            <!-- will just include ejs file into this tag -->
            <%- include('_form_fields') %>
        </form>
    </div>
</body>
</html>